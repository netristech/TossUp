#!/bin/bash
# Reset network interfaces

echo "|----------------------------------------------|"
echo "| Restarting services... This may take |"
echo "| a few minutes. Please be patient...          |"
echo "|----------------------------------------------|"
echo " "
sed -i 's/upload_max_filesize = 2/upload_max_filesize = 200/g' /etc/php.ini
sed -i 's/post_max_size = 8/post_max_size = 200/g' /etc/php.ini
/etc/init.d/network restart
ifdown enp0s3
ifdown enp0s8
ifup enp0s3
ifup enp0s8
systemctl stop httpd
systemctl start httpd
ip addr show | grep "enp0s3"
ip addr show | grep "enp0s8"
echo " "
echo "Repairs complete!"
echo " "
